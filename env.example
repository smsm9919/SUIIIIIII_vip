# ===== BYBIT API =====
BYBIT_API_KEY=YOUR_BYBIT_API_KEY_HERE
BYBIT_API_SECRET=YOUR_BYBIT_API_SECRET_HERE

# ===== BOT & SYMBOL =====
# مثال: SUI/USDT:USDT أو ASTR/USDT:USDT حسب البوت
SYMBOL=SUI/USDT:USDT
INTERVAL=15m

# رافعة مالية
LEVERAGE=10

# نسبة رأس المال المستخدمة في الصفقة (60% = 0.60)
RISK_ALLOC=0.60

# وضع البوزيشن في Bybit (oneway أو hedge)
BYBIT_POSITION_MODE=oneway

# ===== RANGE FILTER SETTINGS =====
RF_PERIOD=20
RF_MULT=3.5

# أقصى سبريد مسموح به (بالـ bps: 6.0 = 0.06%)
MAX_SPREAD_BPS=6.0

# ===== DUST GUARD / كميات حد أدنى =====
# آخر جزء صفقة لو نزل عنده يقفل الصفقة بالكامل
FINAL_CHUNK_QTY=40.0
# أقل كمية نعتبرها "مقبولة" بعد الإغلاق
RESIDUAL_MIN_QTY=9.0

# ===== LOGGING / MODES =====
# تفعيل تنفيذ الأوامر (لو FALSE يبقى البوت تحليل فقط)
EXECUTE_ORDERS=TRUE
# DRY_RUN لو TRUE يبقى يحاكي بس بدون تنفيذ حقيقي
DRY_RUN=FALSE
# تشغيل/إيقاف اللوج القديم المفصل
LOG_LEGACY=FALSE
# تشغيل لوج الإضافات (Bookmap + Flow + Council Dashboard)
LOG_ADDONS=TRUE

# ===== BOOKMAP / FLOW SETTINGS (اختياري – نفس قيم الكود) =====
BOOKMAP_DEPTH=50
BOOKMAP_TOPWALLS=3
IMBALANCE_ALERT=1.30

FLOW_WINDOW=20
FLOW_SPIKE_Z=1.60
CVD_SMOOTH=8

# ===== SERVER / RENDER =====
# لو شغال على Render حط RENDER_EXTERNAL_URL أو SELF_URL
SELF_URL=https://your-render-service.onrender.com
# أو سيب SELF_URL فاضي وخلي Render يحط RENDER_EXTERNAL_URL
# RENDER_EXTERNAL_URL=...

PORT=5000
